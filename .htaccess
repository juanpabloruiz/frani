# Activar motor de reescritura
RewriteEngine On

# 1️⃣ Redirigir URLs con extensión .php o .html a la versión sin extensión
RewriteCond %{THE_REQUEST} \s/+([^.]+)\.(php|html)\s [NC]
RewriteRule ^ %1 [R=301,L]

# 2️⃣ Reescribir internamente las URLs sin extensión a sus archivos reales
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# 3️⃣ Evitar que se liste el contenido de carpetas
Options -Indexes
